<h1><%= @task.title %></h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', value: @task.title %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control', value:@task.details %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
